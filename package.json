{
  "name": "Magnolia_light_dev_cli",
  "version": "1.0.3",
  "description": "POC with using command line tool for generating light module and templates for it.",
  "scripts": {
    "start": "node ./bin/createFolders.js && node ./bin/copyResources.js && node ./bin/editMagnoliaProperties.js && node ./bin/build.js && ./bin/watchBootstrap.js &",
    "mgnlbuild": "node ./bin/build.js"
  },
  "bin": {
    "addPage": "bin/createPage.js",
    "addComp": "bin/createComponent.js",
    "addAvailability": "bin/addAvailability.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap-less": "^3.3.8",
    "font-awesome": "^4.5.0",
    "jquery": "^2.2.0"
  },
  "devDependencies": {
    "fs": "0.0.2",
    "fs.extra": "^1.3.2",
    "json2yaml": "^1.0.3",
    "less": "^2.5.3",
    "watch": "^0.17.1",
    "yaml2json": "^1.0.2",
    "yamljs": "^0.2.4"
  },
  "editMagnoliaProperties": {
    "author": {
      "path": "apache-tomcat-7.0.64/webapps/magnoliaAuthor/WEB-INF/config/default/magnolia.properties",
      "changes": {
        "magnolia.resources.dir": "${magnolia.home}/../../../resources",
        "magnolia.develop": "true"
      }
    }
  },
  "config": {
    "outputPath": "../light-modules"
  },
  "lightModuleName":"sampleModule",
  "lightDevFoldersInModule": {
    "dialogs_components": "/dialogs/components",
    "dialogs_pages": "/dialogs/pages",
    "templates_components": "/templates/components",
    "templates_pages": "/templates/pages",
    "css": "/webresources/css",
    "cssWatch": "/webresources/css/bootstrap-less",
    "js": "/webresources/js",
    "fonts": "/webresources/fonts"
  },
  "lightDevCopyResources": {
    "./node_modules/jquery/dist/jquery.js": "js",
    "./node_modules/bootstrap-less/bootstrap": "cssWatch",
    "./node_modules/bootstrap-less/fonts": "fonts",
    "./node_modules/bootstrap-less/js/bootstrap.js": "js",
    "./node_modules/font-awesome/fonts": "fonts",
    "./node_modules/font-awesome/css/font-awesome.css": "css"
  }
}
