{
  "name": "@magnolia/cli",
  "version": "0.0.1-snapshot",
  "description": "A tool to setup and facilitate light development with Magnolia CMS. For an introduction to light development, see https://documentation.magnolia-cms.com/display/DOCS/Light+development+in+Magnolia",
  "preferGlobal": true,
  "bin": {
    "mgnl": "bin/mgnl.js"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.magnolia-cms.com/build/npm-cli.git"
  },
  "author": "Magnolia International Ltd.",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://jira.magnolia-cms.com/browse/NPMCLI"
  },
  "dependencies": {
    "@magnolia/magnolia-build": "^0.5.1-snapshot-34",
    "adm-zip": "^0.4.7",
    "async": "^2.0.0-rc.3",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "fs": "0.0.2",
    "fs-extra": "^0.30.0",
    "http": "0.0.0",
    "jquery": "^2.2.3",
    "json2yaml": "^1.1.0",
    "progress": "^1.1.8",
    "replace": "^0.3.0",
    "request": "^2.69.0",
    "truncate-middle": "^1.0.3",
    "yaml-js": "^0.1.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "shelljs": "^0.7.0",
    "should": "^8.3.1",
    "standard": "^6.0.8"
  },
  "scripts": {
    "test": "standard && mocha"
  },
  "setupMagnolia": {
    "downloadUrl": "https://nexus.magnolia-cms.com/content/repositories/magnolia.public.releases/info/magnolia/bundle/magnolia-community-demo-bundle/${magnoliaVersion}/magnolia-community-demo-bundle-${magnoliaVersion}-tomcat-bundle.zip",
    "tomcatFolder": "apache-tomcat",
    "webapps": {
      "magnoliaAuthor": {
        "magnolia.develop": true,
        "magnolia.update.auto": true
      },
      "magnoliaPublic": {
        "magnolia.update.auto": true
      }
    },
    "downloadJars": {
      "neat-resources-1.0.1": "https://nexus.magnolia-cms.com/service/local/repositories/magnolia.forge.releases/content/com/neatresults/mgnltweaks/neat-resources/1.0.1/neat-resources-1.0.1.jar"
    }
  },
  "config": {
    "outputPath": "light-modules"
  },
  "lightModuleName": "sampleModule",
  "lightDevFoldersInModule": {
    "dialogs_components": "/dialogs/components",
    "dialogs_pages": "/dialogs/pages",
    "templates_components": "/templates/components",
    "templates_pages": "/templates/pages",
    "css": "/webresources/css",
    "js": "/webresources/js"
  },
  "lightDevCopyResources": {
    "jquery/dist/jquery.js": "js"
  }
}
